{
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "lib": ["ES6", "dom", "scripthost"],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/assets/maps/**/*", "./src/test/**/*"]
}
