{
  "compilerOptions": {
    "target": "ES5",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "lib": ["ES5", "dom", "scripthost"],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "outDir": "./out"
  },
  "include": ["./src"]
}
